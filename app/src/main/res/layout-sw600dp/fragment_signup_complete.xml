<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">
    <!--tools:showIn="@layout/activity_signin"-->
    <RelativeLayout
        android:id="@+id/complete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp">
        <ImageView
            android:id="@+id/cast_image"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_cast_person"
            android:padding="4dp" />
        <TextView
            android:id="@+id/complete_sign_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/complete_sign_up"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp"
            android:layout_centerHorizontal="true"
            android:padding="5dp"/>
    </RelativeLayout>
    <ScrollView
        android:id="@+id/scroll"
        android:layout_below="@+id/complete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_last_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginRight="1dp"
                    android:layout_marginEnd="1dp"
                    android:hint="Last name"
                    android:textColorHint="@color/colorPrimary">
                    <EditText
                        android:id="@+id/users_sun_name"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textSize="13sp"
                        android:inputType="text"
                        android:nextFocusDown="@+id/users_others_name"
                        android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ "/>
                </android.support.design.widget.TextInputLayout>
                <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_first_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="1dp"
                    android:layout_marginStart="1dp"
                    android:hint="First name"
                    android:textColorHint="@color/colorPrimary">
                    <EditText
                        android:id="@+id/users_others_name"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textSize="13sp"
                        android:inputType="text"
                        android:nextFocusDown="@+id/users_mobile"
                        android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ "/>
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:hint="Email"
                android:textColorHint="@color/colorPrimary">
                <!-- set editable for email false -->
                <EditText
                    android:id="@+id/users_email"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="13sp"
                    android:inputType="textWebEmailAddress"/>
            </android.support.design.widget.TextInputLayout>

            <!-- Take this to detail <Button
                android:id="@+id/number_code"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:text="+234"
                android:textColor="@android:color/black"
                android:alpha="0.8"
                android:enabled="false"
                android:background="@color/number_code"/>-->
            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_mobile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:hint="Mobile"
                android:textColorHint="@color/colorPrimary">
                <EditText
                    android:id="@+id/users_mobile"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="13sp"
                    android:inputType="phone"
                    android:nextFocusDown="@+id/users_title"
                    android:digits="0123456789"/>
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:hint="Title (Mobile developer,Web developer,QA,etc.)"
                android:textColorHint="@color/colorPrimary">
                <EditText
                    android:id="@+id/users_title"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="13sp"
                    android:inputType="text"
                    android:nextFocusDown="@+id/users_event_password"/>
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:hint="Password"
                android:textColorHint="@color/colorPrimary"
                app:passwordToggleEnabled="true"
                app:passwordToggleTint="@color/colorAccent">
                <EditText
                    android:id="@+id/users_event_password"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="13sp"
                    android:inputType="textPassword"
                    android:nextFocusDown="@+id/users_event_password_confirm"/>
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_confirm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:hint="Confirm"
                android:textColorHint="@color/colorPrimary"
                app:passwordToggleEnabled="true"
                app:passwordToggleTint="@color/colorAccent">
                <EditText
                    android:id="@+id/users_event_password_confirm"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="13sp"
                    android:inputType="textPassword" />
            </android.support.design.widget.TextInputLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">
                <TextView
                    android:id="@+id/text_dob"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="DOB"
                    android:textSize="13sp"
                    android:textColor="@color/colorPrimary"/>
                <ImageView
                    android:id="@+id/img_calendar"
                    android:layout_marginLeft="15dp"
                    android:layout_marginStart="15dp"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:padding="4dp"
                    android:src="@drawable/ic_perm_contact_calendar_24dp"/>
                <EditText
                    android:id="@+id/cast_dob"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:inputType="date"
                    android:visibility="invisible"
                    android:gravity="center_horizontal"
                    android:layout_marginBottom="5dp"/>
            </LinearLayout>
            <RadioGroup
                android:id="@+id/rg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:gravity="center_horizontal">
                <android.support.v7.widget.AppCompatRadioButton
                    android:id="@+id/rb_male"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Male"
                    android:textColor="@color/colorPrimary"
                    android:layout_marginRight="5dp"
                    android:layout_marginEnd="5dp"
                    app:buttonTint="@color/colorAccent"
                    android:checked="true"/>
                <android.support.v7.widget.AppCompatRadioButton
                    android:id="@+id/rb_female"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Female"
                    android:textColor="@color/colorPrimary"
                    android:layout_marginLeft="5dp"
                    android:layout_marginStart="5dp"
                    app:buttonTint="@color/colorAccent"/>
            </RadioGroup>
            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_summary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Summary"
                android:textColorHint="@color/colorPrimary"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp">
                <EditText
                    android:id="@+id/cast_summary"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="13sp"
                    android:lines="3"
                    android:minLines="2"
                    android:inputType="textMultiLine"/>
            </android.support.design.widget.TextInputLayout>
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/send_complete_sign_up"
        android:layout_below="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/button_background"
        android:text="SignUp" />
</RelativeLayout>