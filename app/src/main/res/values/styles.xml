<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="TextColor">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:editTextColor">@android:color/white</item>
    </style>

    <style name="fab_style">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">10sp</item>
        <item name="android:typeface">monospace</item>
    </style>

    <!-- Preference -->
    <string name="pref_personality_title">Personality</string>
    <string name="pref_personality_key" translatable="false">pref_personality</string>

    <string name="pref_list_title">Show date of birth</string>
    <string name="pref_list_key" translatable="false">pref_list</string>
    <string name="list_summary">@string/every_one</string>
    <!--list value-->
    <string name="every_one">Every one</string>
    <string name="just_this_device">Just this device</string>
    <string name="current_user">current user</string>
    <string name="never">never</string>
    <!--list entity and entry-->
    <string-array name="pref_entity_entry">
        <item>@string/every_one</item>
        <item>@string/just_this_device</item>
        <item>@string/current_user</item>
        <item>@string/never</item>
    </string-array>

    <string name="pref_cast_list_title">Cast users update</string>
    <string name="pref_cast_list_key" translatable="false">pref_cast_list</string>
    <string name="cast_list_summary">@string/as_they_are_created</string>
    <!--cast list value-->
    <string name="as_they_are_created">As they are created</string>
    <string name="once_a_day">Once a day</string>
    <string name="once_life_time_of_application">Once life time of application</string>
    <!--cast list entity and entry-->
    <string-array name="pref_cast_entity_entry">
        <item>@string/as_they_are_created</item>
        <item>@string/once_a_day</item>
        <item>@string/once_life_time_of_application</item>
    </string-array>

    <string name="pref_reset_title">Reset</string>
    <string name="pref_reset_key" translatable="false">pre_reset</string>
    <string name="reset_summary">Clear all settings made</string>
</resources>
